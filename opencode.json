{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "XcodeBuildMCP": {
      "type": "local",
      "command": ["npx", "-y", "xcodebuildmcp@latest"],
      "enabled": true,
      "environment": {
        "XCODEBUILDMCP_ENABLED_WORKFLOWS": "simulator,ui-automation,debugging,macos,swift-package",
        "INCREMENTAL_BUILDS_ENABLED": "false",
        "XCODEBUILDMCP_SENTRY_DISABLED": "false"
      }
    }
  }
}
