{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "XcodeBuildMCP": {
      "type": "local",
      "command": ["npx", "-y", "xcodebuildmcp@latest"],
      "enabled": true,
      "environment": {
        "INCREMENTAL_BUILDS_ENABLED": "false",
        "XCODEBUILDMCP_SENTRY_DISABLED": "true"
      }
    },
    "apple-mcp": {
      "type": "local",
      "command": ["bunx", "--no-cache", "apple-mcp@latest"],
      "enabled": true
    }
  }
}
